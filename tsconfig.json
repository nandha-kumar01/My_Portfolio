{
  "compilerOptions": {
    /* ---------- Language & Runtime ---------- */
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",

    /* ---------- Module System ---------- */
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    /* ---------- Strictness & Safety ---------- */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,

    /* ---------- Interop ---------- */
    "allowJs": true,
    "esModuleInterop": true,

    /* ---------- Performance ---------- */
    "incremental": true,

    /* ---------- Path Aliases ---------- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* ---------- Next.js Plugin ---------- */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  /* ---------- IMPORTANT (prevents auto reconfigure message) ---------- */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}
